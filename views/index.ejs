<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Real-Time Chat</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .chat-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        #msglist {
            list-style-type: none;
            margin: 0;
            padding: 15px;
            flex-grow: 1;
            overflow-y: auto;
            background-color: #f5f5f5;
            border: 1px solid #ddd;
            border-radius: 10px;
            transition: background-color 0.3s;
        }

        #msglist li {
            padding: 15px;
            border-bottom: 1px solid #ddd;
            font-size: 16px;
            transition: background-color 0.3s;
        }

        #msglist li:last-child {
            border-bottom: none;
        }

        .chat-input {
            display: flex;
            align-items: center;
            background-color: #fff;
            padding: 15px;
            border-top: 1px solid #ddd;
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
        }

        #username,
        #msg {
            flex-grow: 1;
            margin-right: 15px;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        #btn {
            padding: 12px 20px;
            border: none;
            background-color: #007BFF;
            color: white;
            cursor: pointer;
            border-radius: 5px;
        }

        #btn:hover {
            background-color: #0056b3;
        }

        @media (max-width: 600px) {
            .chat-input {
                flex-direction: column;
            }

            #username,
            #msg,
            #btn {
                margin-bottom: 10px;
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <div class="chat-container">
        <ul id="msglist">
            <% for (let i = 0; i < chats.length; i++) { %>
                <li><strong><%= chats[i].username %>:</strong> <%= chats[i].content %></li>
                <% } %>
        </ul>

        <div class="chat-input mt-3">
            <input id="startchat" type="hidden" data-roomid="<%= roomid %>">
            <input type="text" class="form-control" id="username" placeholder="Your Name">
            <input type="text" class="form-control" id="msg" placeholder="Type a message...">
            <button id="btn" class="btn btn-primary">Send</button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        let btn = document.getElementById('btn');
        let inputUsername = document.getElementById('username');
        let inputMsg = document.getElementById('msg');
        let msgList = document.getElementById('msglist');

        let startchat = document.getElementById('startchat');

        socket.emit('join_room', {
            roomid: startchat.getAttribute('data-roomid')
        });

        btn.onclick = function exec() {
            socket.emit('msg_send', {
                msg: inputMsg.value,
                inputUsername: inputUsername.value,
                roomid: startchat.getAttribute('data-roomid')
            });
            inputMsg.value = ''; // Clear the message input after sending
        }

                    socket.on('msg_rvcd', (data) => {
                        let msglists = document.createElement('li');
                        msglists.innerHTML = `<strong>${data.inputUsername}</strong>: ${data.msg}`;
                        msgList.appendChild(msglists);
                    });
                </script>
</body>

</html>
