<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real-Time Chat App</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            /* Replace with your preferred background color */
            display: flex;
            flex-direction: column;
            height: 100vh;
        }



        .chat-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        #msglist {
            list-style-type: none;
            margin: 0;
            padding: 10px;
            flex-grow: 1;
            overflow-y: auto;
            background-color: #f5f5f5;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        #msglist li {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            font-size: 14px;
            /* Adjust font size as needed */
            font-family: 'Arial', sans-serif;
            /* Specify the preferred font family */
        }

        #msglist li:last-child {
            border-bottom: none;
        }


        .chat-input {
            display: flex;
            align-items: center;
            background-color: #fff;
            padding: 10px;
            border-top: 1px solid #ddd;
        }

        #username,
        #room,
        #msg {
            flex-grow: 1;
            margin-right: 10px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        #btn {
            padding: 10px 20px;
            border: none;
            background-color: #007BFF;
            color: white;
            cursor: pointer;
            border-radius: 5px;
        }

        #btn:hover {
            background-color: #0056b3;
        }

        @media (max-width: 600px) {
            .chat-input {
                flex-direction: column;
            }

            #username,
            #room,
            #msg,
            #btn {
                margin-bottom: 10px;
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <div class="chat-container">
        <ul id="msglist">
            <% for (let i = 0; i < chats.length; i++) { %>
                <li><strong><%= chats[i].username %>:</strong> <%= chats[i].content %></li>
                <% } %>
        </ul>

        <div class="chat-input">
            <input id="startchat" type="hidden" data-roomid="<%= roomid %>"></input>
           <!-- to my name  -->
            <input type="text" id="username"  placeholder="Enter your name...">
            <input type="text" id="msg" placeholder="Type a message...">
            <button id="btn" ">Send</button>
        </div>
    </div>

    <script src=" /socket.io/socket.io.js"></script>
                <script>
                    const socket = io();

                    let btn = document.getElementById('btn');
                    let inputUsername = document.getElementById('username');
                    let inputMsg = document.getElementById('msg');
                    let msgList = document.getElementById('msglist');

                    let startchat = document.getElementById('startchat');

                    socket.emit('join_room', {
                        roomid: startchat.getAttribute('data-roomid')
                    });

                    btn.onclick = function exec() {
                        socket.emit('msg_send', {
                            msg: inputMsg.value,
                            inputUsername: inputUsername.value,
                            roomid: startchat.getAttribute('data-roomid')
                        });
                    }

                    

                    socket.on('msg_rvcd', (data) => {
                        let msglists = document.createElement('li');
                        msglists.innerHTML = `<strong>${data.inputUsername}</strong>: ${data.msg}`;
                        msgList.appendChild(msglists);
                    });
                </script>
</body>

</html>